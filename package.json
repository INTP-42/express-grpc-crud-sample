{
  "name": "express-grpc-crud-sample",
  "version": "0.1.0",
  "description": "It is simple Customer CRUD App on gRPC and Express REST Api",
  "main": "src/app.js",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "build": "rm -rf node_modules && npm ci",
    "build:firstTime": "npm install",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "start": "NODE_ENV=production node src/app.js",
    "grpc": "NODE_ENV=development nodemon src/grpc/index.js",
    "test": "mocha  tests/*.test.js  --timeout 250000 --exit --bail",
    "ssl:gen": "cd ssl && ../scripts/ssl.sh && cd ..",
    "ssl:win:gen": "cd ssl && powershell -ExecutionPolicy unrestricted ../scripts/ssl.ps1 && cd .."
  },
  "keywords": [
    "express",
    "CRUD",
    "gRPC",
    "hbs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.8.21",
    "@grpc/proto-loader": "^0.7.10",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "hbs": "^4.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2"
  }
}
